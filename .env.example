SUPABASE_SERVICE_KEY=your_service_key_here

# Schema Configuration (for multi-schema architecture)
SUPABASE_SCHEMA=sanzo_color_advisor
SUPABASE_TABLE_PREFIX=sanzo_

# Local Supabase (for development)
VITE_SUPABASE_URL=http://localhost:54321
VITE_SUPABASE_ANON_KEY=your_local_anon_key_here

# ===== SERVER CONFIGURATION =====
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:3001

# ===== AUTHENTICATION PROVIDERS =====
# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# GitHub API Configuration (for color data scraping)
GITHUB_TOKEN=your_github_personal_access_token_here

# ===== IMAGE ANALYSIS SERVICES =====
# OpenAI for room photo analysis
OPENAI_API_KEY=your_openai_key_for_image_analysis

# Cloudinary for image storage and processing
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===== SECURITY CONFIGURATION =====
JWT_SECRET=your_random_jwt_secret_min_32_chars_here
ENCRYPTION_KEY=your_encryption_key_32_chars_here
TRUST_PROXY=false

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ANALYSIS_RATE_LIMIT_WINDOW_MS=60000
ANALYSIS_RATE_LIMIT_MAX_REQUESTS=10

# ===== FILE UPLOAD CONFIGURATION =====
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_PATH=uploads/room-photos

# ===== CACHE CONFIGURATION =====
CACHE_EXPIRY_MS=3600000
GITHUB_CACHE_EXPIRY_MS=3600000
WEB_SCRAPER_CACHE_EXPIRY_MS=86400000

# ===== WEB SCRAPER CONFIGURATION =====
WEB_SCRAPER_REQUEST_DELAY=2000
WEB_SCRAPER_MAX_RETRIES=3
WEB_SCRAPER_TIMEOUT=30000

# ===== MONITORING & ANALYTICS =====
# Analytics tracking (optional)
ANALYTICS_API_KEY=your_analytics_key_here

# Error tracking (Sentry or similar)
ERROR_TRACKING_DSN=your_sentry_dsn_here

# ===== EMAIL CONFIGURATION =====
# SMTP for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=info
LOG_FORMAT=combined

# ===== HEALTH CHECK CONFIGURATION =====
HEALTH_CHECK_INTERVAL=300000

# ===== FEATURE FLAGS =====
ENABLE_IMAGE_ANALYSIS=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_ANALYTICS_TRACKING=true
ENABLE_EMAIL_NOTIFICATIONS=true