# Netlify Production Environment Variables Template
# Set these in Netlify Dashboard -> Site Settings -> Environment Variables

# ===== DEPLOYMENT CONFIGURATION =====
NODE_ENV=production
HOST=0.0.0.0
PORT=8888

# ===== SUPABASE CONFIGURATION =====
# Use your production Supabase instance
REACT_APP_SUPABASE_URL=https://supabase.turklawai.com
REACT_APP_SUPABASE_ANON_KEY=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9.eyJpc3MiOiJzdXBhYmFzZSIsImlhdCI6MTc1NjY1MTM4MCwiZXhwIjo0OTEyMzI0OTgwLCJyb2xlIjoiYW5vbiJ9.tDEh7l2zecY6zLl19zVT3U_e7seWAiuBMcdnCcq2Jxo
SUPABASE_SERVICE_KEY=your_production_service_key_here

# Schema Configuration
SUPABASE_SCHEMA=sanzo_color_advisor
SUPABASE_TABLE_PREFIX=sanzo_

# ===== CORS CONFIGURATION =====
# Update with your Netlify domain
ALLOWED_ORIGINS=https://your-site.netlify.app,https://sanzo-color-advisor.netlify.app

# ===== IMAGE ANALYSIS SERVICES =====
# OpenAI for room photo analysis
OPENAI_API_KEY=your_production_openai_key

# Cloudinary for image processing
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===== SECURITY CONFIGURATION =====
JWT_SECRET=your_production_jwt_secret_min_32_chars
ENCRYPTION_KEY=your_production_encryption_key_32_chars
TRUST_PROXY=true

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
ANALYSIS_RATE_LIMIT_WINDOW_MS=60000
ANALYSIS_RATE_LIMIT_MAX_REQUESTS=50

# ===== FILE UPLOAD CONFIGURATION =====
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_PATH=/tmp/room-photos

# ===== CACHE CONFIGURATION =====
CACHE_EXPIRY_MS=3600000
GITHUB_CACHE_EXPIRY_MS=7200000
WEB_SCRAPER_CACHE_EXPIRY_MS=86400000

# ===== WEB SCRAPER CONFIGURATION =====
WEB_SCRAPER_REQUEST_DELAY=3000
WEB_SCRAPER_MAX_RETRIES=2
WEB_SCRAPER_TIMEOUT=15000

# ===== MONITORING & ANALYTICS =====
# Error tracking (Sentry)
ERROR_TRACKING_DSN=your_production_sentry_dsn

# Analytics tracking
ANALYTICS_API_KEY=your_production_analytics_key

# ===== EMAIL CONFIGURATION =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_production_email@gmail.com
SMTP_PASS=your_production_app_password

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=warn
LOG_FORMAT=combined

# ===== HEALTH CHECK CONFIGURATION =====
HEALTH_CHECK_INTERVAL=300000

# ===== FEATURE FLAGS =====
ENABLE_IMAGE_ANALYSIS=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_ANALYTICS_TRACKING=true
ENABLE_EMAIL_NOTIFICATIONS=false

# ===== GITHUB API CONFIGURATION =====
GITHUB_TOKEN=your_production_github_token

# ===== N8N WEBHOOK CONFIGURATION =====
# If using N8N workflows in production
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook
N8N_API_KEY=your_n8n_api_key

# ===== MCP INTEGRATION =====
# MCP server endpoints if running separately
MCP_SERVER_URL=https://your-mcp-server.com
MCP_API_KEY=your_mcp_api_key